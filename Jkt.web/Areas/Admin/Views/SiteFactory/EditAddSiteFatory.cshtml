
@{
    ViewBag.Title = "添加场地";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<head>
    <script type="text/javascript" src="http://api.map.baidu.com/api?v=1.5&ak=RMPTma1blVcK5DVPhB37saNL"></script>
